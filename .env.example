# Database
DATABASE_URL=postgresql://sheratan:sheratan@localhost:5432/sheratan
PGVECTOR_ENABLED=true

# Embeddings (off, local, openai, huggingface)
EMBEDDINGS_PROVIDER=off
EMBEDDINGS_MODEL=all-MiniLM-L6-v2

# LLM (standardmäßig deaktiviert)
LLM_ENABLED=false
LLM_PROVIDER=openai
LLM_API_KEY=

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Orchestrator / Job Queue
JOB_POLL_INTERVAL=5
MAX_CONCURRENT_JOBS=5
# Authentication (JWT)
JWT_SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication (API Keys) - comma-separated list
API_KEYS=test-api-key-1,test-api-key-2

# Security
GUARD_ENABLED=true
PII_DETECTION_ENABLED=true

# Logging
LOG_LEVEL=INFO
